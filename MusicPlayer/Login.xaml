<Window x:Class="MusicPlayer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MusicPlayer" 
         xmlns:i ="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:MusicPlayer.UserControls"
        mc:Ignorable="d"
        Title="Login" 
        Height="550" 
        Width="800"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        xmlns:vm="clr-namespace:MusicPlayer.ViewModel"
        WindowStyle="None"
        Background="Transparent"
        Name="loginWindow"
        Icon="\Resource\Images\icon.ico">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <Border CornerRadius="40" >
            <Border.Background>
                <ImageBrush ImageSource="/Resource/Images/Background.jpg" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <Border CornerRadius="40"  Background="{StaticResource SecondaryDark}" Opacity="0.65">

        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <uc:ControlBar/>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="240"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1" Height="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" ></RowDefinition>
                        <RowDefinition Height="40" ></RowDefinition>
                        <RowDefinition Height="90" ></RowDefinition>
                        <RowDefinition Height="80" ></RowDefinition>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">

                        <Image
                            Source="Resource/Images/Logo.png"
                            Stretch="Fill"
                            Height="150"
                            Width="150"
                            HorizontalAlignment="Center"
                            Margin="0,-70,0,0">
                        </Image>

                        <TextBlock
                            Text="N.A.N"
                            FontSize="21"
                            Height="30"
                            Foreground="{StaticResource PrimaryMid}"
                            FontWeight="Bold"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center"
                            >

                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <TextBlock
                            Text="Not a normal Music Player"
                            FontSize="18"
                            Foreground="{StaticResource SecondaryLight}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">

                        </TextBlock>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                        Text="Tên người dùng"
                        FontWeight="DemiBold" 
                        Height="25"
                        Foreground="{StaticResource PrimaryMid}" 
                        FontSize="18"
                        Margin="40,4,0,41" Grid.ColumnSpan="2"/>
                        <materialDesign:PackIcon 
                        Kind="Account"
                        Foreground="{StaticResource SecondaryLight}" 
                        Height="25"
                        Width="25"
                        Margin="3,43,0,0"/>
                        <TextBox
                        x:Name="tbNameLogin"
                        materialDesign:HintAssist.Hint="Nhập tên người dùng"
                        Height="35"
                        FontSize="17"
                        BorderBrush="{StaticResource SecondaryLight}"    
                        Foreground="{StaticResource SecondaryLight}"
                            Text="{Binding Username}"
                        Margin="40,30,0,5" Grid.ColumnSpan="2" />

                    </Grid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="88*"/>
                            <ColumnDefinition Width="197*"/>
                            <ColumnDefinition Width="35*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                        Text="Mật khẩu"
                        Height="25"
                        Foreground="{StaticResource PrimaryMid}"
                        FontWeight="DemiBold" 
                        FontSize="18"
                        Margin="40,0,0,40" Grid.ColumnSpan="3"/>
                        <materialDesign:PackIcon 
                        Kind="Key"
                        Foreground="{StaticResource SecondaryLight}"
                        Height="25"
                        Width="25"
                        Margin="3,40,0,0"/>
                        <PasswordBox
                        x:Name="tbPassLogin"
                        Height="35"
                        FontSize="17"
                        Style="{StaticResource MaterialDesignRevealPasswordBox}"
                        materialDesign:HintAssist.Hint="Nhập mật khẩu"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Foreground="{StaticResource SecondaryLight}"
                        BorderBrush="{StaticResource SecondaryLight}"
                        Margin="40,30,0,5" Grid.ColumnSpan="3">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PasswordChanged">
                                    <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                           CommandParameter="{Binding ElementName=tbPassLogin}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>
                    </Grid>
                    <Grid Grid.Row="4" Margin="0,0,0,-30">
                        <Button
                            x:Name="btLogin"
                            IsDefault="True"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="50"
                            Width="150"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName= loginWindow}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            BorderBrush="Transparent"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="{StaticResource PrimaryLight}"
                            >
                            <TextBlock
                              Height="30"
                              FontSize="18"
                              FontWeight="Medium" 
                              Foreground="{StaticResource PrimaryDark}"
                              Margin="0,5,0,0"
                              Text="ĐĂNG NHẬP" />
                        </Button>
                    </Grid>
                    <Grid Grid.Row="5" Margin="0,0,0,-60">
                        <Button
                            x:Name="btSignUp"
                            Width="150"
                            Command="{Binding ToSignUpCommand}"
                            CommandParameter="{Binding ElementName=loginWindow}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            <TextBlock
                                Text="ĐĂNG KÝ"
                                TextDecorations="Underline"
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="{StaticResource PrimaryLight}">
                            </TextBlock>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
