<Window x:Class="MusicPlayer.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:MusicPlayer.UserControls"
        Height="650" 
        Width="570"
        Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBar></uc:ControlBar>
        </Grid>

        <Grid Grid.Row="1">
            <Border
                Background="{StaticResource SecondaryDark}"
                CornerRadius="0,0,40,40"/>

            <TextBlock 
                Text="ĐĂNG KÝ" 
                FontSize="27" Foreground="{StaticResource SecondaryLight}" 
                FontWeight="Bold" 
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="15"/>

            <Grid
                HorizontalAlignment="Center"
                VerticalAlignment="Top" 
                Margin="0,57,0,0"
                Height="370"
                Width="500" >

                <Border 
                    Background="{StaticResource SecondaryMid}"
                    CornerRadius="40"/>

                <Grid
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="330"
                    Width="430">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="185"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" >
                                <TextBlock
                                Text="Tên người dùng"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <TextBox
                                    materialDesign:HintAssist.Hint="nhubaole" 
                                    FontSize="16"
                                    BorderBrush="{StaticResource SecondaryLight}"
                                    Foreground="{StaticResource SecondaryLight}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left" 
                                    Width="180"/>
                            </Grid>

                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" >
                                <TextBlock
                                Text="Họ tên"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <TextBox
                                    materialDesign:HintAssist.Hint="Lê Bảo Như"
                                    FontSize="16"
                                    Foreground="{StaticResource SecondaryLight}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"                                    
                                    Width="180" 
                                    BorderBrush="{StaticResource SecondaryLight}"/>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="185"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <TextBlock
                                    Text="Mật khẩu"
                                    FontSize="18"
                                    Foreground="{StaticResource PrimaryMid}"                                
                                    FontWeight="Bold"
                                    VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <PasswordBox
                                    materialDesign:HintAssist.Hint="Nhập mật khẩu"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    FontSize="16"
                                    Foreground="{StaticResource SecondaryLight}"
                                    BorderBrush="{StaticResource SecondaryLight}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="180"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <TextBlock
                                    Text="Xác nhận"
                                    FontSize="18"
                                    Foreground="{StaticResource PrimaryMid}"                                
                                    FontWeight="Bold"
                                    VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <PasswordBox
                                    materialDesign:HintAssist.Hint="Nhập lại mật khẩu"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    FontSize="16"
                                    Foreground="{StaticResource SecondaryLight}"
                                    BorderBrush="{StaticResource SecondaryLight}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="180"/>
                            </Grid>
                        </Grid>
                        
                        
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock
                                Text="Email"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <TextBox
                                materialDesign:HintAssist.Hint="21520082@gm.uit.edu.vn" 
                                FontSize="16"
                                BorderBrush="{StaticResource SecondaryLight}"
                                Foreground="{StaticResource SecondaryLight}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Width="425"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="28"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock
                                Text="Số điện thoại"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <TextBox
                                materialDesign:HintAssist.Hint="0987654321" 
                                FontSize="16"
                                BorderBrush="{StaticResource SecondaryLight}"
                                Foreground="{StaticResource SecondaryLight}"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Width="425"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="185"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" >
                                <TextBlock
                                Text="Ngày sinh"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <DatePicker
                                    Width="180"
                                    materialDesign:HintAssist.Hint="dd/mm/yyyy" 
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Foreground="{StaticResource SecondaryLight}"
                                    FontSize="16"
                                    BorderBrush="{StaticResource SecondaryLight}"/>
                            </Grid>

                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" >
                                <TextBlock
                                Text="Giới tính"
                                FontSize="18"
                                Foreground="{StaticResource PrimaryMid}"                                
                                FontWeight="Bold"
                                VerticalAlignment="Top"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <ComboBox
                                    FontSize="16"
                                    Foreground="{StaticResource SecondaryLight}"
                                    BorderBrush="{StaticResource SecondaryLight}"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="180"
                                    Background="Transparent">                 
                                    
                                    <ComboBoxItem
                                        IsSelected="True"
                                        Content="Nữ" />
                                    
                                    <ComboBoxItem
                                        Content="Nam"/>                                    
                                </ComboBox>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

        </Grid>

        
    </Grid>
</Window>
